#include <stdio.h>

typedef struct
{
 int num;
 int den;
}Fract[100],Sum;

int quantity();
void sum(int num);
void input(int num);

int main()
{
  int n;
  n=quantity();
  input(n);
  sum(n);
  return 0;
}

int quantity()
{
  int q;
  printf("Enter the number of fractions(maximum 100)=");
  scanf("%d",&q);
  return q;
}

void input(int num)
{
  int i=0;
  for(i=0;i<num;++i)
  {
   printf("Enter numerator denominator:");
   scanf("%d%d",&Fract.num[i],&Fract.den[i]);
  }
}

void sum(int num)
{
  int lcd=1,i=0;

  for(i=0;i<num;++i)
  {
    lcd*=Fract.[i];
  }

  for(i=0;i<num;+i)
  {
    Fract.num[i]*=lcd;
    Fract.num[i]=Fract.num[i]/Fract.den[i];
  }

  for(i=0;i<num;++i)
  {
    Sum.num+=Fract.num[i];
    Sum.den=lcd;
  }

  printf("Sum of "num" Fractions=")
  printf("%d/%d",Sum.num,Sum.den);
}
